<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold mb-4">Sign Up</h1>
  
  <%= form_with model: @user do |f| %>
    <% if @user.errors.any? %>
      <div class="mb-4">
        <ul class="list-disc list-inside text-red-500">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :email, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :user_type, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.select :user_type, options_for_select(['admin', 'claims']), {}, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>
    
    <div>
      <%= f.submit 'Sign Up', class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md focus:outline-none focus:ring focus:ring-blue-200" %>
    </div>
  <% end %>
  
      <%= link_to 'Back to Home', root_path, class: "block mt-4 text-sm text-blue-600 hover:underline" %>
</div>
